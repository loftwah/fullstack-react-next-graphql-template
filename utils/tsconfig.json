{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "./types/roots"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules"]
}
